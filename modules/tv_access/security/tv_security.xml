<openerp>
<data noupdate="0">
    <record id="group_tv_admin" model="res.groups">
        <field name="name">group_tv_admin</field>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
    <record id="group_tv_director" model="res.groups">
        <field name="name">group_tv_director</field>
    </record>
    <record id="group_tv_manager" model="res.groups">
        <field name="name">group_tv_manager</field>
    </record>
    <record id="group_tv_user" model="res.groups">
        <field name="name">group_tv_user</field>
    </record>
</data>
<data noupdate="0">
    <record model="ir.rule" id="tv_visibility_group_tv_user">
        <field name="name">Own records group_tv_user</field>
        <field name="model_id" ref="tv_channel.model_tv_channel"/>
        <field name="domain_force">
            [
                ('create_uid', '=', user.id),
            ]
        </field>
        <field name="groups" eval="[(4,ref('group_tv_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    <record model="ir.rule" id="tv_visibility_group_tv_manager">
        <field name="name">Own records group_tv_manager</field>
        <field name="model_id" ref="tv_channel.model_tv_channel"/>
        <field name="domain_force">
            [
                ('create_uid', '=', user.id),
            ]
        </field>
        <field name="groups" eval="[(4,ref('group_tv_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</data>

</openerp>
